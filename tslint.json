{
    "rules": {
        "trailing-comma": [false, { "multiline": "always", "singleline": "never" }],
        "interface-name": [false, "always-prefix"],
        "arrow-parens": false,
        "no-trailing-whitespace": false,
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-preblock"],
        "import-spacing": false,
        "curly": false,
        "object-literal-shorthand": false,

        "align": [true, "parameters"],
        "class-name": true,
        "eofline": true,
        "jsdoc-format": true,
        "member-access": false,
        "member-ordering": false,
        "no-arg": true,
        "noImplicitAny": false,
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-duplicate-variable": true,
        "no-empty": true,
        "no-eval": true,
        "no-internal-module": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-unused-expression": true,
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-finally", "check-whitespace"],
        "quotemark": [true, "single", "jsx-double"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "switch-default": true,
        "triple-equals": [true, "allow-null-check"],
        "typedef": [true, "call-signature", "arrow-call-signature"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": false
    },
    "linterOptions": {
        "exclude": ["config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
    }
}
